      <pb facs="http://gallica.bnf.fr/ark:/12148/btv1b10010238j/f6.highres" n="6"/>
      <p><label type="rubrique">6. Erudition</label></p>
      <p><persName ref="#jd"><abbr>JD</abbr></persName> Livre de <persName ref="#todorov">Todorov</persName> et <persName ref="#bakhtine">Bakhtine</persName></p>
